.body {
  background-image: linear-gradient(140deg, #d9feff 0%, #b8e5ff 100%);
}

.popup-class {
  font-weight: bolder;
  color:#fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 150px;
  width: 150px;
  padding: 5px;
  border-radius: 10px;
  overflow: hidden;
}

.content {
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  justify-content: space-between;
  margin-left: 2vw;
  width: 96vw;
  margin-right: 2vw;
  padding-top: 6px;
  padding-bottom: 6px;
}

.normal-card {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  font-size: 20px;
  width: 96vw;
  margin-bottom: 6px;
  background-color: white;
  border: rgb(233, 233, 233) solid 1px;
  padding: 5px;
  padding-left: 5px;
  padding-right: 5px;
  border-radius: 8px;
}


.name-text {
  font-size: 12px;
  text-align: center;
  margin: auto;
  color: #00000010;
}