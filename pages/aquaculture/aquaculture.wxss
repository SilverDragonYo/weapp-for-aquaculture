/* pages/aquaculture/aquaculture.wxss */
.body {
  background-image: linear-gradient(140deg, #d9feff 0%, #b8e5ff 100%);
}

.content {
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  justify-content: space-between;
  margin-left: 2vw;
  margin-right: 2vw;
  margin-top: 6px;
  padding-bottom: 2vh;
}

.normal-card {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 19px;
  width: 96vw;
  margin-bottom: 6px;
  background-color: white;
  border: rgb(233, 233, 233) solid 1px;
  padding: 15px;
  padding-left: 20px;
  padding-right: 15px;
  border-radius: 8px;
}

.deviceState-text {
  font-weight: bolder;
  text-align: left;
  margin-right: 6vh;
}

.introAndSetting-text {
  font-weight: bolder;
  margin: auto;
}

.sensorData-card-outer {
  display: flex;
  flex-direction: column;
  text-align: center;
  background-color: white;
  height: auto;
  width: 96vw;
  border-radius: 8px;
  border: rgb(233, 233, 233) solid 1px;
  margin-bottom: 6px;
}

.sensorData-card-container {
  display: flex;
  flex-direction: row; 
  justify-content: space-between;
}

.sensorData-card {
  position: relative;
  height: 6vh;
  width: 27vw;
  background-color: transparent;
  font-weight: bolder;
  padding: 9px;
}

.sensorData-card:not(:last-child)::after {
  content: "";
  position: absolute;
  right: 0;
  top: 5%;
  bottom: 5%;
  width: 1px;
  background-color: rgb(233, 233, 233);
}

.normal-card-pressed {
  background-color: rgb(245,245,245);
}

.sensorData-card-title {
  letter-spacing: 1px;
  margin-top: 1vh;
  padding-bottom: 1vh;
  font-size: 16px;
  font-weight: normal;
}

.card-text {
  text-align: center;
  font-size: 13px;
  letter-spacing: 1px;
  margin-bottom: 5px;
}

.card-data {
  text-align: center;
  font-size: 24px;
}

.dropdown-menu {
  right: 3%;
  position: absolute;
  border: rgb(233, 233, 233) 1px solid ;
  border-radius: 9px;
  width: 50%;
  z-index: 10;
  font-size: 15px;
  --dropdown-menu-height: 25px;
  --dropdown-menu-background-color: transparent;
  --dropdown-menu-box-shadow:0 2px 2px rgba(133, 133, 133, 0.08);

}

.van-popup--top {
  box-shadow: 0 2px 2px rgba(133, 133, 133, 0.08);
  border-left: rgb(233, 233, 233) solid 1px !important;
  border-right: rgb(233, 233, 233) solid 1px !important;
  border-radius: 9px;
  height: 859rpx;
  margin-top: 1px;
}

.my-dropdown-item {
  width: 96vw;
  margin-left: 2vw;
  margin-right: 2vw;
  --popup-background-color: white;
  --overlay-background-color: transparent;
}

.chart-card {
  position: relative;
  font-size: 18px;
  width: 96vw;
  margin-bottom: 6px;
  background-color: white;
  border: rgb(233, 233, 233) solid 1px;
  padding: 5px;
  border-radius: 9px;
}

.echarts {
  width: 100%;
  height: 900rpx;
}

.ec-canvas {
  width: 100%;
  height: 100%;
  z-index: 1;
  position: relative;
}

